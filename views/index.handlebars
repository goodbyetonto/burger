<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
    {{#each burgers}}
    {{this}}
        {{#unless this.dataValues.devoured}}
        {{!-- {{> burgers/burger-block devoured=true}} --}}
            {{this.dataValues.id}} {{this.dataValues.burger_name}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
    {{burger}}
    {{#each burger}}
        {{#if this.devoured}}
            {{!-- {{> burgers/burger-block devoured=false}} --}}
            {{this.id}} {{this.burger_name}}
        {{/if}}
        {{this}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="bu" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input id="devoured" type="radio" name="Devoured" value="1" checked> Devoured!<br>
        <input id="not-devoured" type="radio" name="Devoured" value="0"> Not Devoured
    </div>

    <button id="burger_btn" type="submit">Add Burger</button>
</form>